body
    include nav.pug  
    div.container.mt-3
      if(todos.length)
        table.table.table-sm.table-bordered.table-hover
            thead.thead-light
               th S.No 
               th Title
               th Is completed
               th Actions
            tbody 
              each val in todos
               tr 
                td=val.id 
                td=val.title
                td=val.is_completed
                td
                  a(href=`/todo/delete/${val.id}`, onclick="return confirm('Are you sure you want to delete this todo?');")
                    i.material-icons delete

      if(!todos.length)
        h4 No todos found.